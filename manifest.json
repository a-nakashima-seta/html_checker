{
  "manifest_version": 3,
  "name": "HTML Checker",
  "version": "1.5",
  "description": "HTMLメールのダブルチェックを自動化します。",
  "permissions": ["activeTab", "scripting", "tabs"],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "checker48.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["popup.js"]
    }
  ]
}
